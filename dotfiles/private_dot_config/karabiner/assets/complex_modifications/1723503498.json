{
  "title": "Launch MacOS apps",
  "rules": [
    {
      "description": "Launch apps by right option+letters.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": ["right_option"]
            }
          },
          "to": [
            {
              "shell_command": "open '/Applications/Chrome.app'"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "t",
            "modifiers": {
              "mandatory": ["right_option"]
            }
          },
          "to": [
            {
              "shell_command": "open '/Applications/Webex Teams.app'"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": ["right_option"]
            }
          },
          "to": [
            {
              "shell_command": "open '/Applications/Cisco Jabber.app'"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "f",
            "modifiers": {
              "mandatory": ["right_option"]
            }
          },
          "to": [
            {
              "shell_command": "open ~"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "s",
            "modifiers": {
              "mandatory": ["right_option"]
            }
          },
          "to": [
            {
              "shell_command": "open '/Applications/Sublime Text.app'"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "t",
            "modifiers": {
              "mandatory": ["right_option"]
            }
          },
          "to": [
            {
              "shell_command": "open '/Applications/Utilities/Terminal.app'"
            }
          ]
        }
      ]
    }
  ]
}
